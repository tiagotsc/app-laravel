# CRIAR MÓDULO QUE FICARÁ DISPONÍVEL NA PASTA MODULES/NOME_MÓDULO_CRIADO
php artisan module:make <module-name>

# MINIFICAR NO MODO DE PRODUÇÃO JS E CSS CONFIGURADOS NO ARQUIVO WEBPACK.MIX.JS
npm run prod
# SE LOCAL WINDOWS, VERSÃO NODEJS FOR SUPERIOR A 12.14.1, EXECUTE
$env:NODE_OPTIONS = "--openssl-legacy-provider";npm run prod

# MINIFICAR NO MODO DE DESENVOLVIMENTO JS E CSS CONFIGURADOS NO ARQUIVO WEBPACK.MIX.JS
npm run dev
# SE LOCAL WINDOWS, VERSÃO NODEJS FOR SUPERIOR A 12.14.1, EXECUTE
$env:NODE_OPTIONS = "--openssl-legacy-provider";npm run dev

# INICIAR EXECUÇÃO DOS JOBS LOCALMENTE
php artisan queue:work

# CASO QUEIRA LIMPAR AS FILAS
php artisan queue:clear

# CASO QUEIRA APAGAR OS JOBS QUE FALHARAM
php artisan queue:flush

# REINICAR FILA DE JOBS, APÓS UM DEPLOY
php artisan queue:restart